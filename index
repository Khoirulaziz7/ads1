<body>
    <div class="content">
        <h1>ðŸ“„ Konten Website Anda</h1>
        <p>Ini adalah halaman utama. Interstitial ad akan muncul sesuai konfigurasi:</p>
        
        <div class="config">
          frequency: 2,<br>
          capping: 0.1 jam (6 menit),<br>
          interval: 30 detik,<br>
          timeout: 5 detik
        </div>
        
        <div class="status" id="status">Menunggu penayangan iklan...</div>
    </div>

    <!-- Overlay Iklan -->
    <div class="ad-overlay" id="adOverlay">
        <div class="ad-content">
            <div class="ad-title">ðŸ“¢ SPONSORED</div>
            <p>Tonton iklan untuk mendukung kami!</p>
            <div class="countdown" id="countdown">5</div>
            <button class="close-btn" id="closeBtn">Lewati</button>
        </div>
    </div>

    <script>
        // Konfigurasi sesuai permintaan
        const config = {
            frequency: 2,      // 2 iklan per sesi
            capping: 0.1 * 60 * 60 * 1000, // 0.1 jam = 6 menit dalam ms
            interval: 30 * 1000,           // 30 detik antar iklan
            timeout: 5                     // delay 5 detik sebelum iklan pertama
        };

        let adCount = 0;
        const status = document.getElementById('status');
        const adOverlay = document.getElementById('adOverlay');
        const countdownEl = document.getElementById('countdown');
        const closeBtn = document.getElementById('closeBtn');

        function showAd() {
            if (adCount >= config.frequency) return;
            
            adCount++;
            status.textContent = `Iklan ke-${adCount} sedang dimuat...`;
            
            // Tampilkan overlay setelah timeout
            setTimeout(() => {
                adOverlay.classList.add('active');
                let seconds = config.timeout;
                countdownEl.textContent = seconds;
                
                const timer = setInterval(() => {
                    seconds--;
                    countdownEl.textContent = seconds;
                    
                    if (seconds <= 0) {
                        clearInterval(timer);
                        closeAd();
                    }
                }, 1000);
            }, config.timeout * 1000);
        }

        function closeAd() {
            adOverlay.classList.remove('active');
            status.textContent = `Iklan ke-${adCount} selesai. Menunggu iklan berikutnya...`;
            
            // Jadwalkan iklan berikutnya jika belum mencapai frekuensi maksimal
            if (adCount < config.frequency) {
                setTimeout(showAd, config.interval);
            } else {
                status.textContent = "âœ… Semua iklan telah ditampilkan (sesuai konfigurasi).";
            }
        }

        // Event listener tombol lewati
        closeBtn.addEventListener('click', closeAd);

        // Mulai sesi iklan setelah halaman dimuat
        status.textContent = `Sesi iklan dimulai. Iklan pertama dalam ${config.timeout} detik...`;
        setTimeout(showAd, config.timeout * 1000);
    </script>
</body>
